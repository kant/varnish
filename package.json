{
  "name": "@allenai/varnish",
  "version": "0.7.4",
  "description": "Varnish makes it easy to build AI2 branded demos, websites, and  applications.",
  "author": "reviz@allenai.org",
  "license": "Apache-2.0",
  "repository": "git@github.com:allenai/varnish.git",
  "scripts": {
    "lint": "eslint '**/*.{js,ts,tsx,json}' && echo 'ðŸ’«  Lint complete.'",
    "lint:fix": "eslint '**/*.{js,ts,tsx,json}' --fix && echo 'ðŸ›   Lint --fix complete.'",
    "build": "yarn build:ts && yarn build:theme",
    "build:ts": "tsc -b tsconfig.json && node bin/genless",
    "build:theme": "yarn theme:compile && yarn theme:optimize",
    "theme:compile": "lessc --js theme/theme.less dist/theme.css",
    "theme:optimize": "postcss dist/theme.css > dist/theme.min.css",
    "watch:ts": "tsc -b tsconfig.json -w",
    "watch:theme": "nodemon -w theme/theme.less.js bin/genless",
    "clean": "node bin/clean && rm -rf dist/",
    "prepublishOnly": "yarn build"
  },
  "peerDependencies": {
    "antd": "^3.25.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.0.1",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "@allenai/eslint-config-varnish": "^0.0.1",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^4.3.5",
    "@types/styled-components": "^4.1.19",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "antd": "^3.25.1",
    "cssnano": "^4.1.10",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.1",
    "lessc": "^1.0.2",
    "nodemon": "^1.19.2",
    "postcss": "^7.0.18",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "styled-components": "^4.3.2",
    "typescript": "^3.6.3"
  }
}
